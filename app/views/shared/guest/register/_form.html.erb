<%= simple_form_for(form_object, url: registration_path, html: { id: 'new-registration' }) do |f| %>
  <% if f.object.errors[:base].present? %>
    <%= f.error_notification message: f.object.errors[:base].to_sentence %>
  <% end %>

  <%= f.input :fullname, label: false %>
  <%= f.input :email, label: false %>
  <%= f.input :password, label: false %>
  <%= f.input :password_confirmation, label: false %>
  <%= f.input :avatar_image, as: :file, label: false %>
  <%= f.button :submit, I18n.t('register', scope: 'simple_form.buttons'), class: 'w-100 btn btn-success btn-block' %>
<% end %>
