<%= simple_form_for(form_object, method: :put, url: update_password_profile_path, html: { id: 'profile-update-password-form' }) do |f| %>

  <% if f.object.errors[:base].present? %>
    <%= f.error_notification message: f.object.errors[:base].to_sentence %>
  <% end %>

  <%= f.input :current_password, label: false, input_html: { value: f.object.current_password } %>
  <%= f.input :password, label: false, input_html: { value: f.object.password } %>
  <%= f.input :password_confirmation, label: false, input_html: { value: f.object.password_confirmation } %>
  <%= f.button :submit, I18n.t('simple_form.buttons.submit'), class: 'w-100 btn btn-primary btn-block mb-4' %>
<% end %>
