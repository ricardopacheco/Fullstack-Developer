<table class="table mb-3">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Fullname</th>
      <th scope="col">Email</th>
      <th scope="col">Role</th>
      <th scope="col">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <th scope="row"><%= link_to user.id, admin_user_path(user.id) %></th>
        <td><%= user.fullname %></td>
        <td><%= user.email %></td>
        <% if user.admin? %>
          <td><span class="badge bg-primary"><%= user.role %></span></td>
        <% else %>
          <td><span class="badge bg-secondary"><%= user.role %></span></td>
        <% end %>
        <td>
          <%= link_to '<i class="fa-solid fa-pen-to-square"></i>'.html_safe, edit_admin_user_path(user.id), class: "btn btn-outline-primary" %>
          <% if user.admin? %>
            <%= link_to "Convert to profile", down_admin_user_path(user.id), method: :put, class: 'btn btn-outline-warning' %>
          <% else %>
            <%= link_to "Convert to admin", up_admin_user_path(user.id), method: :put, class: 'btn btn-outline-info' %>
          <% end %>

          <%= link_to '<i class="fa-sharp fa-solid fa-trash"></i>'.html_safe, admin_user_path(user.id), method: :delete, class: "btn btn-outline-danger", data: { confirm: 'Are you sure? This action is irreversible' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

