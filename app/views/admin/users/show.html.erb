<div class="row-fluid">
  <div class="card mb-4">
    <div class="card-body">
      <div class="row">
        <div class="col-sm-3">
          <p class="mb-0"><%= I18n.t('activerecord.attributes.user.avatar_image') %></p>
        </div>
        <div class="col-sm-9">
          <%= @user.image_tag_avatar(:small) %>
        </div>
      </div>
      <hr />

      <div class="row">
        <div class="col-sm-3">
          <p class="mb-0"><%= I18n.t('activerecord.attributes.user.fullname') %></p>
        </div>
        <div class="col-sm-9">
          <p class="text-muted mb-0"><%= @user.fullname %></p>
        </div>
      </div>
      <hr />
      <div class="row">
        <div class="col-sm-3">
          <p class="mb-0"><%= I18n.t('activerecord.attributes.user.email') %></p>
        </div>
        <div class="col-sm-9">
          <p class="text-muted mb-0"><%= @user.email %></p>
        </div>
      </div>
      <hr />
      <div class="row">
        <div class="col-sm-3">
          <p class="mb-0"><%= I18n.t('activerecord.attributes.user.role') %></p>
        </div>
        <div class="col-sm-9">
          <p class="text-muted mb-0">
            <%= @user.badge_role %>
          </p>
        </div>
      </div>
      <hr />
      <div class="row">
        <div class="col-sm-3">
          <p class="mb-0"><%= I18n.t('views.admin.users.actions') %></p>
        </div>
        <div class="col-sm-9">
          <%= @user.link_to_edit %>
          <%= @user.link_to_convert %>
          <%= @user.link_to_delete %>
        </div>
      </div>
    </div>
  </div>
</div>
